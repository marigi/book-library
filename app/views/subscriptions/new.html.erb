<div class="section">
<div class="columns is-centered">
<div class="column is-6 border pa5">
<h1 class="title is-3">Subscribe</h1>
<hr />
<p>Chosen plan: <strong><%= params[:plan] %></p>
<hr />
<%= form_tag subscription_path, id: "payment-form" do |form| %>
<div class="field">
<label for="class-element" class="label">Enter credit or debit card</label>
<div id="card-element">
<!-- A stripe element will be inserted here !-->
</div>
<div id="card-errors" role="alert"></div>
<%= hidden_field_tag :plan_id, params[:plan_id] %>
<button class="button is-fullwidth is-link mt4">Submit</button>
</div>
</div>
</div>
</div>
